<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Grid - Background (Main - Tab Menu)-->
    <Style TargetType="{x:Type Grid}" x:Key="TabMenuGridStyle">
        <Setter Property="Background" Value="#3458DB"/>
    </Style>

    <!-- Grid - Background (Overview - Last Updated) -->
    <Style TargetType="{x:Type Grid}" x:Key="OverviewGridStyle">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                    <GradientStop Color="#3498DB" Offset="0.0"/>
                    <GradientStop Color="#3448DB" Offset="1.9"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- StackPanel - Background (Overview) -->
    <Style TargetType="{x:Type StackPanel}" x:Key="OverviewPanelStyle" BasedOn="{StaticResource HoverEvent}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                    <GradientStop Color="#3498DB" Offset="0.0"/>
                    <GradientStop Color="#3448DB" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>